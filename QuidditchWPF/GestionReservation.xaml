<Window x:Class="QuidditchWPF.GestionReservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:QuidditchWPF"
        Title="Gestion des Réservations"
        MinHeight="280" MinWidth="400"
        Height="280" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Horizontal">
        <ListView Name="ListBoxCoupes"  MinWidth="100" ItemsSource="{Binding }">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Réservation" />
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Vertical" MinWidth="296">
            <Label TextElement.FontSize="24" Content="Fiche du joueur" HorizontalAlignment="Center"/>
            <controls:CtrlReservation />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="Supprimer" Content="Supprimer"/>
                <Button Name="Modifier" Content="Modifier"/>
                <Button Name="Ajouter" Content="Ajouter"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
