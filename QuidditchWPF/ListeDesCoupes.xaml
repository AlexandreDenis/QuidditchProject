<Window x:Class="QuidditchWPF.ListeDesCoupes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListeDesCoupes" MinHeight="200" MinWidth="800"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Horizontal">
        <ListBox Name="ListBoxCoupes" MinWidth="300" SelectionChanged="onClickListBox">
        </ListBox>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Name="Annee" Content="Année :"/>
                <TextBox Name="inputAnnee" Width="410" Text="{Binding Libelle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Name="Libelle" Content="Libellé :"/>
                <TextBox Name="inputLibelle" Width="410" Text="{Binding Id}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="Supprimer" Content="Supprimer"/>
                <Button Name="Modifier" Content="Modifier"/>
                <Button Name="Ajouter" Content="Ajouter"/>
            </StackPanel>
        </StackPanel>
        
    </StackPanel>
</Window>
